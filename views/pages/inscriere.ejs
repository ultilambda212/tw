<hr />
<form id="sign-up">
  <table>
    <tr>
      <td>
        Nume:
      </td>
      <td>
        <input type="text" placeholder="Nume" name="name" required/>
      </td>
    </tr>
    <tr>
      <td>
        Prenume:
      </td>
      <td>
        <input type="text" placeholder="Prenume" name="surname" required/>
      </td>
    </tr>
    <tr>
      <td>
        Telefon:
      </td>
      <td>
        <select>
          <option> +04 </option>
        </select>
        <input type="tel" placeholder="0000000000" name="tel" />
      </td>
    </tr>
    <tr>
      <td>
        Username:
      </td>
      <td>
        <input type="text" placeholder="User" name="username" required />
      </td>
    </tr>
    <tr>
      <td>
        Parola:
      </td>
      <td>
        <input type="password" placeholder="Password" name="pass" required />
      </td>
    </tr>
    <tr>
      <td>
        E-mail:
      </td>
      <td>
        <input type="email" placeholder="E-mail" name="e-mail" required/>
      </td>
    </tr>
    <tr>
      <td>
        Sex:
      </td>
      <td>
        <input type="radio" name="Sex" /> Barbat
        <input type="radio" name="Sex" /> Femeie
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <input type="Submit" value="Submit" name="submit" />
      </td>
    </tr>
  </table>
</form>